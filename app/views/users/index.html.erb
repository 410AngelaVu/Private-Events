<div class="container">
<h3>Hello <%= current_user.name %>, this is the list of past events you attended:</h3>
<% current_user.attended_events.where('start_time < ?', Time.now).each do |r| %>
<%= link_to r.title, r %><br>
	<% end %>

<h3><%= current_user.name %> this is the list of future events you are attending:</h3>
<% current_user.attended_events.where('start_time > ?', Time.now).each do |r| %>
<%= link_to r.title, r %><br>
	<% end %><br>

<%= link_to 'Back To Home Page', root_path, class:'btn btn-dark' %>
</div>